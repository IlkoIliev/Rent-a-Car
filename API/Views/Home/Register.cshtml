@model API.Models.Home.Register

@{ ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Register Form!</h1>
                                </div>
                                @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                                {
                    @Html.ValidationMessage("registerFailed")
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Username" } })
                                        @Html.ValidationMessageFor(model => model.Username)
                                    </div>
                                                    <div class="form-group">
                                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-user", placeholder = "Password" })
                                                        @Html.ValidationMessageFor(model => model.Password)
                                                    </div>
                                                                    <div class="form-group">
                                                                        @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "FirstName" } })
                                                                        @Html.ValidationMessageFor(model => model.Firstname)
                                                                    </div>
                                                                                    <div class="form-group">
                                                                                        @Html.EditorFor(model => model.Sirname, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "LastName" } })
                                                                                        @Html.ValidationMessageFor(model => model.Sirname)
                                                                                    </div>
                                                                                                    <div class="form-group">
                                                                                                        @Html.EditorFor(model => model.Egn, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "EGN" } })
                                                                                                        @Html.ValidationMessageFor(model => model.Egn)
                                                                                                    </div>
                                                                                                                    <div class="form-group">
                                                                                                                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "PhoneNum" } })
                                                                                                                        @Html.ValidationMessageFor(model => model.PhoneNumber)
                                                                                                                    </div>
                                                                                                                                    <div class="form-group">
                                                                                                                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Email" } })
                                                                                                                                        @Html.ValidationMessageFor(model => model.Email)
                                                                                                                                    </div>
                                                                                                                                                    <input type="submit" value="Register" class="btn btn-primary btn-user btn-block">}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


